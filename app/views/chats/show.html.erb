<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2><%= @user.name %>さんとのチャット</h2>
              <% @chats.each do |chat| %>
                <% if chat.user_id == current_user.id %>
                      <p style="text-align: left;"><%= chat.message %></p>
                <% else %>
                      <p style="text-align: left;"><%= chat.message %></p>
                <% end %>
              <% end %>
            <%= form_with model: @chat, remote: true do |f| %>
              <%= f.text_field :message %>
              <%= f.hidden_field :room_id %>
            <% end %>
        </div>
    </div>
</div>

